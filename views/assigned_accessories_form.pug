extends layout

block content
  h1= title

  form(method='POST')
    div.form-group
      label(for='item') Accessory:
      select#item.form-control(name='item' required)
        option(value='') --Please select an accessory--
        for accessory in allAccessories
            option(value=accessory._id) #{accessory.name}
    div.form-group
      label(for='employee_assigned') Employee:
      select#employee_assigned.form-control(name='employee_assigned' required)
        option(value='') --Please select an employee--
        for employee in allEmployees
            option(value=employee._id) #{employee.name}
    div.form-group
      label(for='date_assigned') date_assigned:
      input#date_assigned.form-control(type='date', placeholder='date_assigned' name='date_assigned' value=(undefined===assignedAccessory ? '' : assignedAccessory.date_assigned))
    div.form-group
      label(for='date_returned') date_returned:
      input#date_returned.form-control(type='date', placeholder='date_returned' name='date_returned' value=(undefined===assignedAccessory ? '' : assignedAccessory.date_returned))
    div.form-group
      label(for='condition_assigned') condition_assigned:
      input#condition_assigned.form-control(type='text', placeholder='condition_assigned' name='condition_assigned' value=(undefined===assignedAccessory ? '' : assignedAccessory.condition_assigned))
    div.form-group  
      label(for='condition_returned') condition_returned:
      input#condition_returned.form-control(type='text', placeholder='condition_returned' name='condition_returned' value=(undefined===assignedAccessory ? '' : assignedAccessory.condition_returned))

    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg