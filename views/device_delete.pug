extends layout

block content

  h1 #{title}: #{device.serialNumber} : #{device.manufacturer}

  if assigned_employee.length

    p #[strong Delete the following device assignments with employee before attempting to delete this device.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Employee
      dl
        each employee in assigned_employee
          dt
            a(href=device.url) #{employee.name}

  else
    p Do you really want to delete this Device?

    form(method='POST')
      div.form-group
        input#deviceid.form-control(type='hidden', name='deviceid', value=device._id )

      button.btn.btn-primary(type='submit') Delete