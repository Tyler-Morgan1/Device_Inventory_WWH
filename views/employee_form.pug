extends layout

block content

  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='name') Employee Name:
      input#name.form-control(type='text', placeholder='First Last' name='name' required value=(undefined===employee ? '' : employee.name) )
      label(for='department') Employee Department:
      input#department.form-control(type='text', placeholder='Department' name='department' value=(undefined===employee ? '' : employee.department) )
      label(for='position') Employee Position:
      input#position.form-control(type='text', placeholder='Position' name='position' value=(undefined===employee ? '' : employee.position) )
    //-   label(for='current_employee') Current Employee (True/False):
    //-   input#current_employee.form-control(type='text' placeholder='True' name='current_employee' value=(undefined===employee ? '' : employee.current_employee) )
    div.form-group
      label(for='date_hired') Date hired:
      input#date_hired.form-control(type='date' name='date_hired' value=(undefined===employee ? '' : employee.date_hired) )
      label(for='date_employment_terminated') Date employment terminated:
      input#date_employment_terminated.form-control(type='date' name='date_employment_terminated' value=(undefined===employee ? '' : employee.date_employment_terminated) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg